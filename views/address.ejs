<% layout('./layouts/boilerplate') %> 
<link rel="stylesheet" href="/css/user.css">
    <div class="carousel-category"> 
        <div class="row mt-4 mb-5">
                <% if(currentUser){%> 
                    <div class="col-4 mt-0" style="transform: none; box-shadow: none;">
                        <div class="" style="width: 300px; height: 80px; background-color: rgb(0, 0, 0); border-radius: 4px;">
                            <img src="https://static-assets-web.flixcart.com/www/linchpin/fk-cp-zion/img/profile-pic-male_4811a1.svg"  alt="" style="padding: 19px; width: 90px;">
                            <small style="font-size: 14px;color: rgb(255, 255, 255); font-weight: 600; letter-spacing: 1px;">Hello, <span class="" style="color: #f50606;"><%= `${currentUser.firstname} ${currentUser.lastname}` %></span></small>               
                        </div>
                        <div class="mt-4" style="width: 300px; height: 510px; background-color: rgb(0, 0, 0); border-radius: 4px;">
                            <small class="mt-5 ml-2 " style="font-size: 14px;color: rgb(255, 255, 255); font-weight: 600; letter-spacing: 1px;">
                                <a class="" href="/user/account/profile/overview" style="text-decoration: none; color: rgb(255, 255, 255);"><i class="fas fa-user" style="color: #f50606"></i> Profile Info</a></small><hr><br>
                                
                            <small class="mt-5 ml-2 " style="font-size: 14px;color: rgb(255, 255, 255); font-weight: 600; letter-spacing: 1px;">
                                <a class="" href="/user/account/profile/overview/address" style="text-decoration: none; color: rgb(255, 255, 255);"><i class="fas fa-tasks" style="color: #f50606"></i> Manage Address</a></small><hr><br>

                                <small class="mt-5 ml-2 " style="font-size: 14px;color: rgb(255, 255, 255); font-weight: 600; letter-spacing: 1px;">
                                    <a class="" href="/user/account/profile/overview/m-account" style="text-decoration: none; color: rgb(255, 255, 255);"><i class="fas fa-folder-open" style="color: #f50606"></i> Manage Accounts</a></small><hr><br>

                            <small class="ml-2 mt-3" style="font-size: 14px;color: rgb(255, 255, 255); font-weight: 600; letter-spacing: 1px;">
                                <a href=""style="text-decoration: none; color: rgb(255, 255, 255);"><i class="fas fa-heart" style="color: #f50606"></i> My Wishlist</a></small><hr><br>

                            <small class="ml-2 mt-3" style="font-size: 14px;color: rgb(255, 255, 255); font-weight: 600; letter-spacing: 1px;"><i class="fas fa-truck" style="color: #f50606"></i> My Order</small><hr><br>


                            <small class="ml-2 mt-3" style="font-size: 14px;color: rgb(255, 255, 255); font-weight: 600; letter-spacing: 1px;">
                                <a class="" href="/user/logout" style="text-decoration: none; color: rgb(255, 255, 255);"><i class="fas fa-sign-out-alt" style="color: #f50606"></i> Logout</a>
                            </small><hr>
                            <img src="https://static-assets-web.flixcart.com/www/linchpin/fk-cp-zion/img/myProfileFooter_4e9fe2.png" alt="" style="width: 100%;">
                        </div>
                        <!-- <div class="mt-3" style="width: 300px; height: 50px; background-color: grey; border-radius: 4px;">
                            <small class="mt-4" style="font-size: 14px;color: #000; font-weight: 600; letter-spacing: 1px; padding: 3px;">Frequently visited.</small>               
                        </div> -->
                    </div> 
               
            <div class="col-8 ml-5">
                <div class="ml-4" style="background-color: rgb(0, 0, 0);  padding: 15px; border-radius: 4px;">
                <h4 class="mt-3 mb-4" style="color: rgb(255, 255, 255);font-weight: 600; letter-spacing: 1px;">Add Address</h4>
                <form action="/user/account/profile/overview/m-address" method="POST" class="validCredentials-form" novalidate>
                <div class="form-group mt-0">
                    <input class="form-control mr-3" type="text" name="name" placeholder="name" style="float: left; width: 40%; height: 50px;  cursor: pointer; background-color: rgb(65, 65, 65); color: #fff;" required>
                </div>
                <div class="form-group mt-0">
                    <input class="form-control" type="tel" name="mobno" placeholder="mobile number" minlength="10" maxlength="10" style="width: 40%;height: 50px; cursor: pointer; background-color: rgb(65, 65, 65); color: #fff;" required>
                </div>
                <div class="form-group mt-0">
                    <input class="form-control mr-3" type="text" name="locality" placeholder="locality" style="float: left; width: 40%; height: 50px;  cursor: pointer; background-color: rgb(65, 65, 65); color: #fff;" required>
                </div>
                <div class="form-group mt-0">
                    <input class="form-control" type="number" name="pincode" placeholder="pincode" minlength="6" maxlength="6" style="width: 40%;height: 50px; cursor: pointer; background-color: rgb(65, 65, 65); color: #fff;" required>
                </div>
                <div class="form-group mt-0">
                    <textarea class="form-control" type="text" name="address" placeholder="Address (area or street)" rows="5" cols="50" style="width: 83%;height: 50px;  cursor: pointer;background-color: rgb(65, 65, 65); color: #fff;" required></textarea>
                </div>
                <div class="form-group mt-0">
                    <input class="form-control mr-3" type="text" name="city" placeholder="City/Town/District" style="float: left; width: 40%; height: 50px;  cursor: pointer; background-color: rgb(65, 65, 65); color: #fff;" required>
                </div>
                <div class="form-group mt-0">
                    <input class="form-control mr-3" type="text" name="country" placeholder="country" style="  width: 40%; height: 50px;  cursor: pointer; background-color: rgb(65, 65, 65); color: #fff;" required>
                </div>
                <div class="form-group mt-0">
                    <label  style="color: rgb(255, 255, 255); font-weight: 600; letter-spacing: 1px;">Address Type</label><br>
                    <input class="" type="radio" name="tag" value="home" id="home" required style="width: 30px;"> 
                    <label for="home" style="color: rgb(255, 255, 255); font-size: 14px; font-weight: 600; letter-spacing: 1px;">Home</label>
                    <input class="" type="radio" name="tag" value="work" id="work" required style="width: 30px;">
                    <label for="work" style="color: rgb(255, 255, 255); font-size: 14px; font-weight: 600; letter-spacing: 1px;">Work</label>
                </div>
                <button class="btn btn-lg btn-danger" style="color: #fff; background-color: #aa0000; border-radius: 2px;">Save</button>
                <a class="ml-3" href="/user/account/profile/overview/address" style="text-decoration: none; font-weight: 600; font-size: 15px; color: rgb(255, 255, 255);">Cancel</a>
                <img src="https://static-assets-web.flixcart.com/www/linchpin/fk-cp-zion/img/myProfileFooter_4e9fe2.png" alt="" style="width: 100%;">
            
            </form>
        </div>
        </div>
        


        </div>
            <% } %>
        </div>
    </div>
