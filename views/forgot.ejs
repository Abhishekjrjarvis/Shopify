<% layout('./layouts/boilerplate') %> 
<link rel="stylesheet" href="/css/forgot.css">
<div class="row">
	<div class="col-md-6">
		<form action="/user/forgot" method="POST" class="validCredentials-form" novalidate>
			<legend class="text-white mt-5">Forgot Password</legend>
			<div class="form-group">
				<label for="email" class="text-white">Email</label>
				<input type="email" name="email" autofocus class="form-control" required>
			</div>
			<button class="btn btn-sm btn btn-danger reset">Reset </button>
		</form>
	</div>
</div>