<% layout('./layouts/boilerplate') %> 

    <div class="carousel-category"> 
        <div class="row mt-4 mb-5">
            <% for(let u of user) {%>
                <% if(currentUser && currentUser.username === u.username) {%> 
                    <div class="col-4 mt-0" style="transform: none; box-shadow: none;">
                        <div class="" style="width: 300px; height: 80px; background-color: rgb(0, 0, 0); border-radius: 4px;">
                            <img src="https://static-assets-web.flixcart.com/www/linchpin/fk-cp-zion/img/profile-pic-male_4811a1.svg"  alt="" style="padding: 19px; width: 90px;">
                            <small style="font-size: 14px;color: #fff; font-weight: 600; letter-spacing: 1px;">Hello, <span class="" style="color: #f50606;"><%= `${u.firstname} ${u.lastname}` %></span></small>               
                        </div>
                        <div class="mt-4" style="width: 300px; height: 490px; background-color: rgb(0, 0, 0); border-radius: 4px;">
                            <small class="mt-5 ml-2 " style="font-size: 14px;color: #fff; font-weight: 600; letter-spacing: 1px;">
                                <a class="" href="/user/account/profile/overview/address" style="text-decoration: none; color: #fff;"><i class="fas fa-tasks" style="color: #f50606"></i> Manage Address</a></small><hr><br>
                            
                            <small class="mt-5 ml-2 " style="font-size: 14px;color: #fff; font-weight: 600; letter-spacing: 1px;">
                                <a class="" href="/user/account/profile/overview/m-account" style="text-decoration: none; color: #fff;"><i class="fas fa-folder-open" style="color: #f50606"></i> Manage Accounts</a></small><hr><br>
                            
                            <small class="ml-2 mt-3" style="font-size: 14px;color: #fff; font-weight: 600; letter-spacing: 1px;">
                                <a href="/user/account/profile/overview/home_wishlist"style="text-decoration: none; color: #fff;"><i class="fas fa-heart" style="color: #f50606"></i> My Wishlist</a></small><hr><br>
                            
                            <small class="ml-2 mt-3" style="font-size: 14px;color: #fff; font-weight: 600; letter-spacing: 1px;">
                                <a href="/user/verify-order/confirmation/true" style="text-decoration: none;color: #fff;"><i class="fas fa-truck" style="color: #f50606"></i> My Order</a></small><hr><br>

                            <small class="ml-2 mt-3" style="font-size: 14px;color: #fff; font-weight: 600; letter-spacing: 1px;">
                                <a class="" href="/user/logout" style="text-decoration: none; color: #fff;"><i class="fas fa-sign-out-alt" style="color: #f50606"></i> Logout</a>
                            </small><hr>
                            <img src="https://static-assets-web.flixcart.com/www/linchpin/fk-cp-zion/img/myProfileFooter_4e9fe2.png" alt="" style="width: 100%;">
                        </div>
                    </div> 
               
            <div class="col-8 ml-5">
                <div class="ml-4" style="background-color: rgb(0, 0, 0);  padding: 15px; border-radius: 4px;">
                <h4 class="mt-3 mb-3" style="color: #fff;font-weight: 600; letter-spacing: 1px;">Personal Details</h4>
                <div class="form-group mt-0">
                    <input class="form-control mr-3" type="text" readonly="readonly" name="firstname" value="<%= u.firstname  %> " style="float: left; width: 40%; height: 50px;  cursor: pointer; background-color: rgb(65, 65, 65); color: #fff;">
                </div>
                <div class="form-group mt-0">
                    <input class="form-control" type="text" readonly="readonly" name="lastname" value="<%= u.lastname %> " style="width: 40%;height: 50px; cursor: pointer; background-color: rgb(65, 65, 65); color: #fff;">
                </div>
                <div class="form-group mt-0">
                    <label for="email" style="color: #fff; font-weight: 600; letter-spacing: 1px;">Email Address</label>
                    <input class="form-control" type="text" readonly="readonly" name="email" value="<%= u.email %> " id="email" style="width: 40%;height: 50px;  cursor: pointer;background-color: rgb(65, 65, 65); color: #fff;">
                </div>

                <div class="form-group mt-0">
                    <label for="mobno" style="color: #fff; font-weight: 600; letter-spacing: 1px;">Mobile No.</label>
                    <input class="form-control" type="tel" readonly="readonly" name="mobno" value="<%= u.mobno %> " id="mobno" style="width: 40%;height: 50px; cursor: pointer; background-color: rgb(65, 65, 65); color: #fff;">
                </div>
                <h5 class="mt-4" style="color: #fff; font-weight: 600; letter-spacing: 1px;">FAQs</h5>
                <p class="mt-4">
                   <span class="" style="color: #fff; font-size: 15px; font-weight: 600; letter-spacing: 1px;">What happens when I update my email address (or mobile number)?</span><br>
                   <span class=" text-white"> 
                       Your login email id (or mobile number) changes, likewise. <br>
                       You'll receive all your account related communication on your updated email address (or mobile number). 
                    </span>
                </p>

                <img src="https://static-assets-web.flixcart.com/www/linchpin/fk-cp-zion/img/myProfileFooter_4e9fe2.png" alt="" style="width: 100%;">
            </div>
        </div>
            <% } %>
            <% } %>
        </div>
    </div>
