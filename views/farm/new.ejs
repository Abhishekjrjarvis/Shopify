<% layout('./layouts/boilerplate') %> 
<link rel="stylesheet" href="/css/homes.css">
<link rel="stylesheet" href="/css/farm_new.css">


    <% if(user.farms.length === 1) {%>
        <div class="alert alert-danger" role="alert">
            You only create one store multiple then buy membership
    </div> 
    <% } else {%>  
        <div class="carousel-category">
                <div class="row">
                    <div class="col-sm-4 col-md-6">
                        <div class="card bg-dark mt-5 p-2" style="border-radius: 10px; box-shadow: 0 0 20px 0px rgba(255,255,255,0.8);">
                        <h1 class="text-white text-center mt-4">Add Store</h1>
                        <form action="/farms" method="POST" class="validCredentials-form" novalidate  >
                            <div class="form-group ">
                                <label for="name" class="text-white mt-2">Store Name</label>
                                <input type="text" class="form-control bg-dark text-white " name="name" id="name" placeholder="Apple Store" required>
                            </div>
                            <div class="form-group">
                                <label for="qty" class="text-white">Qty</label>
                                <input type="number" class="form-control bg-dark text-white " name="qty" id="qty" placeholder="1000000 Area-Wise" required>
                            </div>
                            <div class="form-group">
                                <label for="city" class="text-white">City</label>
                                <input type="text" class="form-control bg-dark text-white " name="city" id="city" placeholder="Mountain View California" required>
                            </div>
                            <div class="form-group">
                                <label for="description" class="text-white">Description</label>
                                <textarea type="text" class="form-control bg-dark text-white " name="description" id="description"  placeholder="Detailed About Store" required></textarea>
                            </div>
                            <div class="form-group">
                                <label for="category" class="text-white">Category</label>
                                <select class="form-control text-white bg-dark" name="category" value="Category" id="category" required>
                                    <option class="text-white" value="Electronics">Electronics</option>
                                    <option class="text-white" value="Fashion">Fashion</option>
                                    <option class="text-white" value="Grocery">Grocery</option>
                                    <option class="text-white" value="Appliances">Appliances</option>
                                    <option class="text-white" value="Mobiles">Mobiles</option>
                                    <option class="text-white" value="Toys">Toys</option>
                                </select>
                                </div>
                                
                            <button class="btn btn-md btn-btn-danger save">Save</button>
                        </form>
                        </div>
                    </div>
                </div>
            </div>
       

                   
    <% } %>

<%= user.farms.length  %> 